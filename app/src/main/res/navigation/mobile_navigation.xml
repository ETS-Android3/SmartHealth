<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    android:drawable="@android:color/holo_green_light"


    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.smarthealth.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.smarthealth.ui.dashboard.DashboardFragment"
        android:label="수면 기록"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.smarthealth.ui.notifications.NotificationsFragment"
        android:label="수면에 좋은 컨텐츠"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/navigation_information"
        android:name="com.example.smarthealth.ui.information.InformationFragment"
        android:label="@string/title_information"
        tools:layout="@layout/fragment_information" />

</navigation>
